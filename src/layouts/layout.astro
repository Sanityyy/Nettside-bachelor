---
const { title } = Astro.props;
const groupName = "Delirium";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{groupName}</title>
    <link rel="icon" href="/logo.png" />
  </head>
  <body
    class="mb-auto min-h-screen flex flex-col"
    style="padding-bottom: 3rem;"
  >
    <nav class="bg-white border-gray-200 dark:bg-gray-800">
      <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
      >
        <a href="./" class="flex items-center space-x-3 rtl:space-x-reverse">
          <img src="/logo.png" class="h-20" alt="company logo" />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
            >{groupName}
          </span>
        </a>

        <div class="hidden w-full md:block md:w-auto" id="navbar-default"></div>
      </div>
    </nav>

    <article class="flex-grow">
      <slot />
      <!-- your content is injected here -->
    </article>

    <footer
      class="fixed bottom-0 left-0 z-20 w-full p-4 bg-white border-t border-gray-200 shadow md:flex md:items-center md:justify-between md:p-6 dark:bg-gray-800 dark:border-gray-600 h-10">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
        >Â© 2024 <a>{groupName}</a>
      </span>
      <ul
        class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0">
        <a
          href="https://www.instagram.com/bachelorgroup6/"
          class="hover:underline">Instagram</a
        >
      </ul>
    </footer>
  </body>
</html>
